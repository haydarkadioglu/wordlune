
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own documents.
    // This rule applies to all subcollections like 'words', 'lists', 
    // and the words within those lists.
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }
  }
}
