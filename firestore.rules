rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // --- Data Collection: Stores user-specific app data ---
    match /data/{userId}/{document=**} {
      // Users can only read and write their own data
      allow read, write: if request.auth.uid == userId;
    }

    // --- User Profiles: Publicly readable, but only owner can write ---
    match /users/{userId} {
      allow read;
      allow create, update, delete: if request.auth.uid == userId;
    }
    
    // --- Usernames: Publicly readable, but creation and deletion are restricted ---
    match /usernames/{username} {
      // Anyone can read to check if a username exists.
      allow read;
      // A user can create a username document for themselves.
      allow create: if request.auth != null;
      // Only the user who owns the username mapping can delete it.
      allow delete: if request.auth.uid == resource.data.userId;
    }
  }
}
